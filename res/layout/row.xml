<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linear_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
	>
    
    <RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content">
    	

	    <TextView 
	        android:id="@+id/list_value" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/blue"
	        android:textSize="14dp"
	        android:textStyle="bold"
	        android:lines="1"
	        android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/availableIcon"
	    />
	    <TextView
	    	android:id="@+id/book_year"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textColor="@color/dark_gray"
	    	android:textSize="14dp"
	    	android:layout_below="@+id/list_value"
	    	android:maxLines="1"
	    	android:layout_toRightOf="@+id/availableIcon"
	    />
    </RelativeLayout>

</LinearLayout>